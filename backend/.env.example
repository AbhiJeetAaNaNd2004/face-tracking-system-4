# This file contains environment variables for the application.
# Copy this file to .env and fill in the values.

# Security
SECRET_KEY=a_very_strong_and_random_secret_key_12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL=sqlite:///face_tracking.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=face_tracking
DB_USER=postgres
DB_PASSWORD=password

# Application
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Face Recognition
FACE_RECOGNITION_TOLERANCE=0.6
FACE_DETECTION_MODEL=hog
FACE_ENCODING_MODEL=large

# Camera
VIDEO_SOURCE=0
DEFAULT_CAMERA_ID=0
MAX_CONCURRENT_STREAMS=5
STREAM_QUALITY=medium
FRAME_RATE=30

# File Storage
UPLOAD_DIR=uploads
FACE_IMAGES_DIR=face_images
MAX_FILE_SIZE=10485760

# Logging
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days
